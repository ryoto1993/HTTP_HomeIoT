<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:flatui="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="jp.co.ryoto1993.httpledcontroller.ModeSelectorFragment">

    <com.cengalabs.flatui.views.FlatButton
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            flatui:fl_theme="@array/blood"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:layout_marginTop="8dp"
            flatui:layout_constraintTop_toTopOf="parent" flatui:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" android:id="@+id/btn_on" app:layout_constraintStart_toEndOf="@+id/btn_off"
            android:layout_marginStart="8dp"
            android:onClick="sendTrigger" android:text="@string/btn_on"/>

    <com.cengalabs.flatui.views.FlatButton
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            flatui:fl_theme="@array/dark"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:textSize="24sp" android:id="@+id/btn_off"
            app:layout_constraintStart_toEndOf="@+id/btn_on" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:onClick="sendTrigger" android:text="@string/btn_off"/>

</android.support.constraint.ConstraintLayout>
